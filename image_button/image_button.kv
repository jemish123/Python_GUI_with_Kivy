<ImageButtonWidget>

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 50
        spacing: 20

        Label:
            id: my_label
            text: "Hello World!"
            font_size: 32

        Button:
            text: "Hello"
            font_size: 32
            size_hint: 0.16, 0.27
            pos_hint: {'center_x': 0.5}
            background_color: 0, 0, 0, 0
            on_press: root.hello_button_pressed()
            on_release: root.hello_button_released()

            Image:
                id: my_image
                source: "../src/logo.jpg"
                center_x: self.parent.center_x
                center_y: self.parent.center_y