<Button>
    font_size: 25
    size_hint: (0.5, 0.2)

<MyLayout>
    FloatLayout:
        size: root.width, root.height

        Label:
            id: name_label
            text: "What is your name?"
            font_size: 32
            size_hint: (0.5, 0.3)
            pos_hint: {"top": 0.5, "left":1}

        TextInput:
            id: name_input
            multiline: False
            size_hint: (0.5, 0.1)
            pos_hint: {"top": 0.4, "x": 0.5}

        Image:
            source: "logo.jpg"
            allow_stretch: True
            keep_ratio: False
            size_hint: (None, None)
            width: 250
            height: 250
            pos_hint: {"x": 0, "top": 1}

        Button:
            text: "Change Background Color"
            on_press: root.change_background()
            pos_hint: {"top": 1, "right": 1}
            #font_size: 35
        Button:
            text: "Greet User"
            on_press: root.greet_user()
            pos_hint: {"bottom": 1, "right": 1}