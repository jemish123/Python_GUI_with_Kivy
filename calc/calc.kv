<CalcLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"

            # this will align the input to the right
            halign: "right"

            font_size: 65
            size_hint: (1, 0.15)

        GridLayout:
            cols: 4
            rows: 5

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "%"

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "C"
                on_press: root.clear()

            Button:
                id: clear
                size_hint: (.2, .2)
                font_size: 32
                text: u"\u00AB"
                on_press: root.remove()

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "/"
                on_press: root.math_sign("/")

            RoundedButton:
                size_hint: (.2, .2)
                font_size: 32
                text: "7"
                on_press: root.button_press(7)

            RoundedButton:
                size_hint: (.2, .2)
                font_size: 32
                text: "8"
                on_press: root.button_press(8)

            RoundedButton:
                size_hint: (.2, .2)
                font_size: 32
                text: "9"
                on_press: root.button_press(9)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "x"
                on_press: root.math_sign("*")

            RoundedButton:
                size_hint: (.2, .2)
                font_size: 32
                text: "4"
                on_press: root.button_press(4)

            RoundedButton:
                size_hint: (.2, .2)
                font_size: 32
                text: "5"
                on_press: root.button_press(5)

            RoundedButton:
                size_hint: (.2, .2)
                font_size: 32
                text: "6"
                on_press: root.button_press(6)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "-"
                on_press: root.math_sign("-")

            RoundedButton:
                size_hint: (.2, .2)
                font_size: 32
                text: "1"
                on_press: root.button_press(1)

            RoundedButton:
                size_hint: (.2, .2)
                font_size: 32
                text: "2"
                on_press: root.button_press(2)

            RoundedButton:
                size_hint: (.2, .2)
                font_size: 32
                text: "3"
                on_press: root.button_press(3)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "+"
                on_press: root.math_sign("+")

            RoundedButton:
                size_hint: (.2, .2)
                font_size: 32
                text: "+/-"
                on_press: root.pos_neg()

            RoundedButton:
                size_hint: (.2, .2)
                font_size: 32
                text: "0"
                on_press: root.button_press(0)

            RoundedButton:
                size_hint: (.2, .2)
                font_size: 32
                text: "."
                on_press: root.dot()

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "="
                on_press: root.equals()

<RoundedButton@Button>
    background_color: (0.3, 0.1, 0.3, 0.5)
    background_normal: ''
    padding: 50
    canvas.before:
        Color:
            rgba: (65/255, 74/255, 74/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [100]